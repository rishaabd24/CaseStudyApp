@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@model CaseStudyApp.ViewModel.ChangePassword
<hr />
<div class="container mt-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-4">
                <h1 class="mb-3">Change Password</h1>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Model.CurrentPwd" class="form-label"></label>
                            <input type="text" asp-for="Model.CurrentPwd" class="form-control">
                            <span asp-validation-for="Model.CurrentPwd" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Model.NewPwd" class="form-label"></label>
                            <input type="text" asp-for="Model.NewPwd" class="form-control">
                            <span asp-validation-for="Model.NewPwd" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Model.ConfirmPwd" class="form-label"></label>
                            <input type="text" asp-for="Model.ConfirmPwd" class="form-control">
                            <span asp-validation-for="Model.ConfirmPwd" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Update Password</button>
                    </form>
                </div>
            </div>
</div>
